<!DOCTYPE html>
<html>
  <head>
    <title>Simple Plot</title>
    <!-- Include order: first jquery, then opencpu.js, and then your code -->
    <script src="opencpu/jquery-1.10.2.min.js"></script>
    <script src="opencpu/opencpu-0.4.js"></script>
    <script>
    //init this script when the page has loaded
       var nomvariable =$_GET("variable");
       var tam=$_GET("n");
       var mes=$_GET("cve_mes");

    function initialize (){

        var req = $("#plotdiv").rplot("histograma", {
          rubro : nomvariable,
          mes : mes,
	  n : tam
        })

        req.fail(function(){
          alert("Server error: " + req.responseText);
        });
    });
  initialize;
    </script>

    <style>
      #plotdiv {
      position: relative;
      width: 600px;
      height: 400px;
      border: solid gray 1px;
    }
  </style>
 </head>
<body>
    <h1>Ejemplo histograma</h1>
    <div id="plotdiv"></div>
    <p>
     hola
    </p>
</body>
</html>
